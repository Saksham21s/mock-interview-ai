{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install --legacy-peer-deps --force",
        "outputDirectory": "dist",
        "nodeVersion": "22.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*\\.css)",
      "headers": { "Content-Type": "text/css" }
    },
    {
      "src": "/(.*)", 
      "dest": "/index.html"
    }
  ]
}